#!/bin/bash
# Pre-commit hook for gitleaks secret scanning
# Install: cp scripts/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit
# Or run: make install-hooks

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running gitleaks pre-commit scan...${NC}"

# Check if gitleaks is installed
if ! command -v gitleaks &> /dev/null; then
    echo -e "${RED}Error: gitleaks is not installed.${NC}"
    echo ""
    echo "Install gitleaks:"
    echo "  macOS:  brew install gitleaks"
    echo "  Linux:  https://github.com/gitleaks/gitleaks#installing"
    echo ""
    echo "Or skip this check with: git commit --no-verify"
    exit 1
fi

# Run gitleaks on staged changes
if gitleaks protect --staged --config=.gitleaks.toml --verbose; then
    echo -e "${GREEN}No secrets detected.${NC}"
    exit 0
else
    echo ""
    echo -e "${RED}Secrets detected! Commit blocked.${NC}"
    echo ""
    echo "If this is a false positive, you can:"
    echo "  1. Add the pattern to .gitleaks.toml allowlist"
    echo "  2. Skip this check with: git commit --no-verify (not recommended)"
    echo ""
    exit 1
fi
